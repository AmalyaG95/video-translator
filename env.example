# Video Translator Configuration
# Copy this file to .env and modify as needed

# Environment
NODE_ENV=development
PYTHONPATH=./backend

# Logging
LOG_LEVEL=INFO

# File Processing
MAX_FILE_SIZE_GB=50
CHUNK_DURATION=30
MAX_CHUNK_DURATION=120
MIN_CHUNK_DURATION=10

# AI Models
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=auto
ENABLE_GPU=true

# Quality Settings
MAX_CONDENSATION_RATIO=1.2
SYNC_TOLERANCE_MS=200
AUDIO_SAMPLE_RATE=22050
AUDIO_CHANNELS=1

# Performance
MAX_WORKERS=4
BATCH_SIZE=1

# TTS Settings
DEFAULT_TTS_VOICE=en-US-AriaNeural

# Translation Models
TRANSLATION_MODEL_PREFIX=Helsinki-NLP/opus-mt
