{
  "name": "video-translator",
  "version": "1.0.0",
  "description": "Standard Video Translator with high-quality lip-sync and voice preservation",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:3000 && NODE_ENV=development SKIP_BACKEND=true electron .",
    "dev:electron:docker": "wait-on http://localhost:3000 && NODE_ENV=development SKIP_BACKEND=true electron .",
    "dev:electron:full": "./run-electron-dev.sh",
    "build": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "setup": "npm install && cd frontend && npm install && cd ../backend-python-ml && python3 -m venv venv && source venv/bin/activate && pip install -r requirements-dev.txt",
    "run": "npm run dev",
    "test": "cd backend-python-ml && python -m pytest tests/",
    "package": "npm run build && npm run build:electron"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.video.translator",
    "productName": "Video Translator",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/.next/**/*",
      "frontend/public/**/*",
      "frontend/package.json",
      "package.json",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/__pycache__/**/*",
      "!**/tests/**/*",
      "!**/artifacts/**/*",
      "!**/venv/**/*",
      "!**/.next/cache/**/*",
      "!backend-nestjs/**/*",
      "!backend-python-ml/**/*",
      "!backend-python-ml-v2/**/*"
    ],
    "extraResources": [
      {
        "from": "frontend",
        "to": "frontend",
        "filter": [
          ".next/**/*",
          "public/**/*",
          "package.json",
          "package-lock.json",
          "node_modules/**/*",
          "!node_modules/.cache/**/*"
        ]
      },
      {
        "from": "backend-nestjs",
        "to": "backend-nestjs",
        "filter": [
          "dist/**/*",
          "package.json",
          "package-lock.json",
          "node_modules/**/*"
        ]
      },
      {
        "from": "backend-python-ml-v2",
        "to": "backend-python-ml-v2",
        "filter": [
          "src/**/*",
          "requirements.txt",
          "entrypoint.sh",
          "venv/**/*",
          "!**/__pycache__/**/*",
          "!**/tests/**/*",
          "!**/artifacts/**/*",
          "!venv/**/__pycache__/**/*",
          "!venv/**/*.pyc",
          "!venv/**/*.pyo"
        ]
      }
    ],
    "asarUnpack": [
      "**/frontend/**/*",
      "**/backend-nestjs/**/*",
      "**/backend-python-ml-v2/**/*",
      "**/electron/standalone-launcher.js"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "electron/assets/logo.png",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "electron/assets/logo.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/logo.png",
      "category": "Video",
      "desktop": {
        "Name": "Video Translator",
        "Comment": "Translate videos with AI-powered lip-sync",
        "Categories": "Video;AudioVideo;",
        "MimeType": "video/mp4;video/avi;video/mov;video/mkv;video/webm;"
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": null
  }
}
